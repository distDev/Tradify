+'use client'
+
+import * as React from 'react'
+
+import { cn } from '@/lib/utils'
+import {
+  Drawer,
+  DrawerContent,
+  DrawerHeader,
+  DrawerTitle,
+  DrawerTrigger,
+} from '@/shared/ui/shadcn/drawer'
+import { UIButton } from '@/shared/ui/ui-button'
+
+interface SelectWithModalProps {
+  title?: string // Заголовок в модалке
+  placeholder?: string // Placeholder, если ничего не выбрано
+  value?: string | React.ReactNode // Отображаемое значение в триггере
+  onOpenChange?: (open: boolean) => void // Коллбек при открытии/закрытии
+  children?: React.ReactNode // Контент модалки
+  className?: string
+  disabled?: boolean
+}
+
+export function UISelectWithModal({
+  title,
+  placeholder = 'Select...',
+  value,
+  onOpenChange,
+  children,
+  className,
+  disabled,
+}: SelectWithModalProps) {
+  const [open, setOpen] = React.useState(false)
+
+  const handleOpenChange = (state: boolean) => {
+    setOpen(state)
+    onOpenChange?.(state)
+  }
+
+  return (
+    <Drawer open={open} onOpenChange={handleOpenChange}>
+      <DrawerTrigger asChild>
+        <UIButton
+          variant="outline"
+          className={cn('w-full justify-between', className)}
+          disabled={disabled}
+        >
+          {value || (
+            <span className="text-muted-foreground">{placeholder}</span>
+          )}
+        </UIButton>
+      </DrawerTrigger>
+
+      <DrawerContent className="h-[80vh] rounded-t-2xl p-0 flex flex-col">
+        {title && (
+          <DrawerHeader className="border-b p-4">
+            <DrawerTitle>{title}</DrawerTitle>
+          </DrawerHeader>
+        )}
+
+        <div className="flex-1 overflow-y-auto">{children}</div>
+      </DrawerContent>
+    </Drawer>
+  )
+}
